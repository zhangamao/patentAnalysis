<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.patent.ORM.Newscolumns" table="newscolumns" catalog="patent">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="columnCode" type="java.lang.String">
            <column name="ColumnCode" length="20" />
        </property>
        <property name="columnName" type="java.lang.String">
            <column name="ColumnName" length="40" />
        </property>        
        <!-- 自身映射多对一单向关联 -->
        <many-to-one name="newscolumns"
        			 column="ParentID"
        			 class="com.patent.ORM.Newscolumns"
        			 lazy="false"/>
    </class>
</hibernate-mapping>
